@page "/posts"
@using Blogging.Client.Services
@using Blogging.Shared.Models
@inject AuthService AuthService

@inject PostService PostService
@inject NavigationManager Nav

<h3>Posts</h3>

@if (posts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary mb-3" @onclick="NewPost">New Post</button>
    <ul class="list-group">
        @foreach (var post in posts)
        {
            <li class="list-group-item">
                <b>@post.Title</b> by @post.AuthorEmail
                <br />
                <small>@post.CreatedAt.ToLocalTime()</small>
                <br />
                <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => ViewPost(post.Id)">View</button>
            </li>
        }
    </ul>
}

@code {
    private List<Post>? posts;

    protected override async Task OnInitializedAsync()
    {
        posts = await PostService.GetAllAsync();
    }

    void NewPost() => Nav.NavigateTo("/posts/new");
    void ViewPost(string id) => Nav.NavigateTo($"/posts/{id}");
}
